{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Lint automatique à la sauvegarde
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Fins de lignes → toujours LF (gère le bug CRLF sous Windows)
  "files.eol": "\n",

  // Assure qu'on prend la config locale du projet
  "eslint.useFlatConfig": true,
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // Active Prettier intégré
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
